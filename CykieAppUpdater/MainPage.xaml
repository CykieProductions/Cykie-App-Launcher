<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CykieAppUpdater.MainPage">

    <Grid>
        <VerticalStackLayout Padding="20" Spacing="10" BackgroundColor="#3E266F">
            <!--<Image Source="" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>-->
            <Button
                x:Name="BtnUpdate"
                Text="Check For Updates"
                SemanticProperties.Hint="Updates the program if possible"
                Clicked="BtnUpdate_Clicked"
            />

            <Button
                x:Name="BtnPlay"
                Text="Launch"
                SemanticProperties.Hint="Runs the program"
                Clicked="BtnPlay_Clicked"
            />

            <Label 
                x:Name="lblVersion"
                HorizontalOptions="End"
                Text="ASDAD"
           />
        </VerticalStackLayout>
    </Grid>

</ContentPage>
